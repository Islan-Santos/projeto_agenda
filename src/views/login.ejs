<%- include('includes/head') %>
    <%- include('includes/navbar') %>


        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">

                    <h1 class="display-2 text-center">login / criar</h1>
                    <p class="text-center lead">faça seu login ou crie uma conta abaixo</p>

                    <%- include('includes/menssages') %>
                    
                    <div class="row text-center">

                        <div class="col-lg">
                            <h4>faça seu login</h4>
                            <p>...</p>
                            <form action="/login/home" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                <div class="form-group">
                                    <label for="">Digite seu Email:</label>
                                    <input type="email" class="form-control" name="email" id="">
                                </div>
                                <div class="form-group">
                                    <label for="">Digite sua senha:</label>
                                    <input type="password" class="form-control" name="password" id="">
                                </div>
                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>

                        </div>
                        <div class="col-lg">
                            <h4>faça seu cadastro!</h4>
                            <p>crie uma conta</p>
                            <form action="/login/register" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                <div class="form-group">
                                    <label for="">Digite um Email:</label>
                                    <input type="email" class="form-control" name="email" id="">
                                </div>
                                <div class="form-group">
                                    <label for="">Digite uma senha:</label>
                                    <input type="password" class="form-control" name="password" id="">
                                </div>
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                            </form>

                        </div>
                    </div>


                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>